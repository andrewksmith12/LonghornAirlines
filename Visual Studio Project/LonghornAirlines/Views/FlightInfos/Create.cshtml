@model LonghornAirlines.Models.Business.FlightInfo

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["Title"] = "Create";
}

<h1>Create A New Flight Number</h1>
<h5 class="text-danger">@ViewBag.Error</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FlightNumber" class="control-label"></label>
                <input asp-for="FlightNumber" class="form-control" />
                <span asp-validation-for="FlightNumber" class="text-danger"></span>
            </div>
            <div>
                Departure City: 
                <div>@Html.DropDownList("DepartCity", (SelectList)ViewBag.AllCities, new { @class = "form-control" })</div>
            </div>
            <div>
                Arrival City:
                <div>@Html.DropDownList("ArriveCity", (SelectList)ViewBag.AllCities, new { @class = "form-control" }) </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FlightTime" class="control-label"></label>
                <input asp-for="FlightTime" class="form-control" />
                <span asp-validation-for="FlightTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaseFare" class="control-label"></label>
                <input asp-for="BaseFare" class="form-control" />
                <span asp-validation-for="BaseFare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

