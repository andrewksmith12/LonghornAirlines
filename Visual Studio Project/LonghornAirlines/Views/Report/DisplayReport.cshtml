@model LonghornAirlines.Models.ViewModels.ReportsViewModel
@{
    ViewData["Title"] = "View";
}
@section imageContent
{
    <h1>Report</h1>

    <h4>
        @*From @ViewBag.CityFromName To @ViewBag.CityToName*@
        @*From @ViewBag.DepartDate To @ViewBag.ArriveDate*@
    </h4>
    <table class="table">
        <thead>
            <tr>
                @if (Model.TotalSeatsSold == true)
                {
                    <th>
                        Total Seats Sold
                    </th>
                }
                @if (Model.TotalRevenue == true)
                {
                    <th>
                        Total Revenue
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            <tr>
                @if (Model.TotalSeatsSold == true)
                {
                    <td>
                        @ViewBag.PassengerCount
                    </td>
                }
                @if (Model.TotalRevenue == true)
                {
                    <td>
                        @ViewBag.Revenue
                    </td>
                }
            </tr>
        </tbody>
    </table>
}