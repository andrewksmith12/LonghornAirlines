@model LonghornAirlines.Models.Business.Reservation
@{
    ViewData["Title"] = "Change Ticket Price";
}


    <h1>Welcome to your Reservation</h1>
    <h5>Confirm all information is correct and proceed to seat selection!</h5>

    <table class="table">
        <tr>
            <th>Ticket No</th>
            <th>Ticket Holder</th>
            <th>Flight Number</th>
            <th>Destination City</th>
            <th>Flight Date</th>
            <th>Flight Time</th>
            <th>Current Seat</th>
            <th>Seat Selection</th>
        </tr>
        <tbody>
            @foreach (Ticket t in Model.Tickets)
            {
                <tr>
                    <td>@t.TicketID</td>
                    <td>
                        @if (t.Customer == null)
                        {
                            <p>No customer selected for this ticket</p>
                        }
                        else
                        {
                            @t.Customer.FirstName
                        }
                    </td>
                    <td>@t.Flight.FlightInfo.FlightNumber </td>
                    <td>@t.Flight.FlightInfo.Route.CityTo.CityName</td>
                    <td>@t.Flight.Date.ToShortDateString()</td>
                    <td>@t.Flight.FlightInfo.FlightTime</td>
                    <td>@t.Seat</td>
                    <td>
                        <a type="button"
                           class="btn"
                           href="#article-editor"
                           data-toggle="modal">Change Fare
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="modal fade" id="article-editor" ">
        <div class="modal-header">
            <a class="close" data-dismiss="modal">&times;</a>
            <h3>Title of the form</h3>
        </div>
        <div class="modal-body">
            <p>Body of the form</p>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <a href="#" class="btn btn-primary">Save Changes</a>
        </div>
    </div>
<a href="#/" class="btn btn-info">Return to List</a>
