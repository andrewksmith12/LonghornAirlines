@model IEnumerable<LonghornAirlines.Models.Users.AppUser>

@{
    ViewData["Title"] = "Customer Lookup";
}

@section imageContent{
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Advantage Number
                </th>
                <th>First Name</th>
                <th>
                    Last Name
                </th>
                <th>Email</th>
                <th>
                    Select
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdvantageNumber);
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Tickets"
                               asp-action="AssignUser"
                               asp-route-TicketID="@ViewBag.TicketID"
                               asp-route-CustomerID="@item.UserID"
                               class="btn btn-outline-primary">Select Customer</a>
                        }
                        else
                        {
                            <!--TODO: Add link to log in page-->
                            <p>Log in</p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
}